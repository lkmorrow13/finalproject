<!DOCTYPE html>
<html>
  <head>
    <title>Finalproject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <ul class="navbar-nav">
        <li class="nav-item"><%= link_to "Home", root_path, class: 'navbar-brand' %></li>
        <li class="nav-item"><%= link_to "Log In", new_user_session_path, class: 'nav-link' %></li>
      </ul>
      <ul class="navbar-nav ml-auto">
        <li class="nav-item"><%= link_to "Settings", edit_user_registration_path(current_user), class: 'dropdown-item' %></li>
        <li class="nav-item"><%= link_to "Log Out", destroy_user_session_path, method: :delete, class: 'dropdown-item' %></li>
      </ul>
    </nav>
    <%= yield %>
  </body>
</html>
